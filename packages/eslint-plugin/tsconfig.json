{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "noEmit": true,
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "downlevelIteration": true,
    "types": ["node", "jest"]
