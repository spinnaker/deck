<VirtualHost {%DECK_HOST%}:{%DECK_PORT%}>
  DocumentRoot /opt/deck/html

  ProxyPass "/gate" "{%API_HOST%}" retry=0
  ProxyPassReverse "/gate" "{%API_HOST%}"
  ProxyPreserveHost On
  ErrorLog /dev/stderr
  TransferLog /dev/stdout

  <Directory "/opt/deck/html/">
    Require all granted
  </Directory>
</VirtualHost>
